<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="395dp"
        tools:context=".MainActivity" >

        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="@string/app_welcome"
            android:visibility="visible" />

            <TextView
                android:id="@+id/goodbyeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="@string/app_welcome"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/txtBldg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/welcomeText"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="Bldg. Abbr." />

            <TextView
                android:id="@+id/txtTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/welcomeText"
                android:layout_toRightOf="@id/txtBldg"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="Class Time" />

            <EditText
                android:id="@+id/boxBldg1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtBldg"
                android:hint="@string/building_abbr"
                android:inputType="text" />

            <EditText
                android:id="@+id/boxTime1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtTime"
                android:layout_toRightOf="@id/boxBldg1"
                android:hint="@string/class_time"
                android:inputType="time"
                android:paddingLeft="10dp" />

            <EditText
                android:id="@+id/boxBldg2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/boxBldg1"
                android:inputType="text" />

            <EditText
                android:id="@+id/boxTime2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/boxTime1"
                android:layout_toRightOf="@id/boxBldg2"
                android:inputType="time"
                android:paddingLeft="10dp" />

            <EditText
                android:id="@+id/boxBldg3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/boxBldg2"
                android:inputType="text" />

            <EditText
                android:id="@+id/boxTime3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/boxTime2"
                android:layout_toRightOf="@id/boxBldg3"
                android:inputType="time"
                android:paddingLeft="10dp" />

            <EditText
                android:id="@+id/boxBldg4"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/boxBldg3"
                android:inputType="text" />

            <EditText
                android:id="@+id/boxTime4"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/boxTime3"
                android:layout_toRightOf="@id/boxBldg4"
                android:inputType="time"
                android:paddingLeft="10dp" />
            
            <EditText
                android:id="@+id/boxBldg5"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/boxBldg4"
                android:inputType="text" />
               
          

           <EditText
                android:id="@+id/boxTime5"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/boxTime4"
                android:layout_toRightOf="@id/boxBldg5"
                android:inputType="time"
                android:paddingLeft="10dp" />
           
           <EditText
                android:id="@+id/boxBldg6"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/boxBldg5"
                android:inputType="text" />
               
          

           <EditText
                android:id="@+id/boxTime6"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/boxTime5"
                android:layout_toRightOf="@id/boxBldg6"
                android:inputType="time"
                android:paddingLeft="10dp" />
            

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/boxBldg6"
                android:layout_marginTop="64dp"
                android:orientation="horizontal" >

                <!-- <RadioButton
                    android:id="@+id/radioBus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Bus" /> -->

                <RadioButton
                    android:id="@+id/radioWalk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Walk" />

                <RadioButton
                    android:id="@+id/radioComb."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bus+Walk" />
            </RadioGroup>
            
            <Button
                android:id="@+id/bSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/radioGroup1"
                android:text="@string/button_submit" />

            <EditText
                android:id="@+id/TestText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/boxBldg6" />

        </RelativeLayout>
    
</ScrollView>